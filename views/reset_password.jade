extends layout

block content
  .welcome__home-message.ng-binding Reset Password
  .welcome__home-buttons
    .col-md-6(style='margin-left:25%;')
      form(role='form')
        #passwordForm.form-group
          .input-group
            input#password.form-control(name='password', type='password', placeholder='Password')
            span.input-group-addon
              i.glyphicon.glyphicon-lock
        // /.form-group
        #rpasswordForm.form-group
          .input-group
            input#rpassword.form-control(name='rpassword', type='password', placeholder='Confirm Password')
            span.input-group-addon
              i.glyphicon.glyphicon-lock
        // /.form-group          
      button.form-control.btn.btn-primary(onclick='reset_password()') Reset Password
block scripts
  script(type='text/javascript', src=base+'/scripts/reset_password.js')