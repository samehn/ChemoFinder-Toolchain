extends ../layout

block stylesheets
  link(href=base+'/style/bootstrap-timepicker.min.css', rel='stylesheet')
  link(rel='stylesheet', href='https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css')  
block headers
  button.header__action-button.ng-binding(data-toggle="tooltip", title="Login", onclick="loginModal()")
    i.glyphicon.glyphicon-log-in
    span.main-actions|                         Login
  .header__actions-divider
  button.header__action-button.ng-binding(data-toggle="tooltip", title="Register", onclick="registerModal()")
    i.glyphicon.glyphicon-user
    span.main-actions|                         Register    
block content
  img.welcome__home-image(src=base+'/images/homeicon.svg')
  .welcome__home-message.ng-binding Welcome to ChemoFinder
  .welcome__home-buttons
    section#section-search.section-search.search-bar
      .div-search.search-bar
         input#tags.input-search.search-bar(type='text', placeholder='Search For Medicines...', style='width:100%')
         p.search_hint hint: use the autocomplete to search for your medicine      
      .div-search.search-bar
        button#search-btn.button-search.search-bar.btn.btn-primary(onclick="search()", style='height:60px; color: white;') Search
    #search-result-table.div_search.hidden
      table#table_search
        thead
          tr.tr_search
            th.th_search Generic Name
            th.th_search Brand Name
            th.th_search Form
            th.th_search Strength
            th.th_search Strength Unit
            th.th_search Pack Type
            th.th_search Manufacturer
            th.th_search Pharmacies
        tbody#search-result       
block modals             
  #Login.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          h4#myModalLabel.modal-title Log in
        // /.modal-header
        .modal-body
          form#login-form(role='form')
            #emailLoginForm.form-group
              .input-group
                input#uEmail.form-control(name='email', type='text', placeholder='Email')
                span.input-group-addon
                  i.glyphicon.glyphicon-user
            // /.form-group
            #passwordLoginForm.form-group
              .input-group
                input#uPassword.form-control(name='password', type='password', placeholder='Password')
                span.input-group-addon
                  i.glyphicon.glyphicon-lock
              // /.input-group
            // /.form-group
            a(href=base+'/user/forgotpassword') forgot password?
              // /.input-group
            // /.form-group
        // /.modal-body
        .modal-footer
          button#login-btn.form-control.btn.btn-primary(onclick='login();') Login
        // /.modal-footer
      // /.modal-content
    // /.modal-dialog
  // /.modal
  #Register.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          h4#myModalLabel.modal-title Register
        // /.modal-header
        .modal-body
          form#register-form(role='form')
            #typeRegisterForm.form-group
              .input-group
                select#type.form-control(name='type')
                  option.form-control(value='') Select Your Type
                  option.form-control(value='DOCTOR') Doctor
                  option.form-control(value='NAVIGATOR') Navigator
                  option.form-control(value='PHARMACY') Pharmacy
                  option.form-control(value='TREATMENT CENTER') Treatment Center
                span.input-group-addon
                  i.glyphicon.glyphicon-briefcase
              // /.input-group
            // /.form-group
            #nameRegisterForm.form-group
              .input-group
                input#name.form-control(name='name', type='text', placeholder='Name')
                span.input-group-addon
                  i.glyphicon.glyphicon-user
            // /.form-group
            #emailRegisterForm.form-group
              .input-group
                input#email.form-control(name='email', type='text', placeholder='Email')
                span.input-group-addon
                  i.glyphicon.glyphicon-envelope
            // /.form-group
            #passwordRegisterForm.form-group
              .input-group
                input#password.form-control(name='password', type='password', placeholder='Password')
                span.input-group-addon
                  i.glyphicon.glyphicon-lock
              // /.input-group
            // /.form-group
            #rpasswordRegisterForm.form-group
              .input-group
                input#rpassword.form-control(name='rpassword' type='password', placeholder='Confirm Password')
                span.input-group-addon
                  i.glyphicon.glyphicon-lock
              // /.input-group
            // /.form-group
            #streetRegisterForm.form-group
              .input-group
                input#street.form-control(name='street', type='text', placeholder='Street')
                span.input-group-addon
                  i.glyphicon.glyphicon-home
            // /.form-group
            #cityRegisterForm.form-group
              .input-group
                input#city.form-control(name='city', type='text', placeholder='City')
                span.input-group-addon
                  i.glyphicon.glyphicon-home
            // /.form-group
            #stateRegisterForm.form-group
              .input-group
                input#state.form-control(name='state', type='text', placeholder='State')
                span.input-group-addon
                  i.glyphicon.glyphicon-home
            // /.form-group
            #zipRegisterForm.form-group
              .input-group
                input#zip.form-control(name='zip', type='text', placeholder='Postal Code')
                span.input-group-addon
                  i.glyphicon.glyphicon-home
            // /.form-group
            #phoneRegisterForm.form-group.handle(style='display:none;')
              .input-group
                input#phone.form-control(name='phone_number', type='text', placeholder='Phone Number')
                span.input-group-addon
                  i.glyphicon.glyphicon-earphone
            // /.form-group
            p.handle(style='display:none;') 
              strong Open from
            #openFromRegisterForm.form-group.handle(style='display:none;')
              .input-group.bootstrap-timepicker.timepicker
                input#timepicker1.form-control.input-small(name='open_from', type='text')
                span.input-group-addon
                  i.glyphicon.glyphicon-time
            // /.form-group
            p.handle(style='display:none;')
              strong Open to
            #openToRegisterForm.form-group.handle(style='display:none;')
              .input-group.bootstrap-timepicker.timepicker
                input#timepicker2.form-control.input-small(name='open_to', type='text')
                span.input-group-addon
                  i.glyphicon.glyphicon-time
            // /.form-group      
        // /.modal-body
        .modal-footer
          button#signup-btn.form-control.btn.btn-primary(onclick='register();') Register
        // /.modal-footer
      // /.modal-content
    // /.modal-dialog
  // /.modal
  #loadingModal.modal.fade(role='dialog', data-backdrop='static', data-show='true', data-keyboard='false')
    .modal-dialog.modal-sm
      .modal-content
        .modal-body
          h2
            span.glyphicon.glyphicon-refresh.glyphicon-refresh-animate
            |   Loading...
  #confimSignup.modal.fade(role='dialog', data-backdrop='static', data-show='true', data-keyboard='false')
    .modal-dialog
      .modal-content
        .modal-header
          h4#myModalLabel.modal-title Register
        // /.modal-header
        .modal-body
          |  You registration is done successfuly, wait for the admin approval
        // /.modal-body
        .modal-footer
          button.form-control.btn.btn-primary(onclick='location.reload();') OK
        // /.modal-footer
      // /.modal-content
    // /.modal-dialog
  // /.modal
  #showPharmacies.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
          h4#myModalLabel.modal-title Pharmacies
        // /.modal-header
        .modal-body.ovf-auto
          table#table_pharmacies
            thead
              tr.tr_search
                th.th_search Name
                th.th_search Phone
                th.th_search Email
                th.th_search Street
                th.th_search City
                th.th_search State
                th.th_search ZIP
                th.th_search Open From
                th.th_search Open To
                th.th_search Price
                th.th_search Last Update
            tbody#pharmacies-result
              td.empty_table.td_search(style="text-align: center;", valign="top", colspan="11") No available pharmacies currently
        // /.modal-body
        .modal-footer
          button.form-control.btn.btn-primary(type='button', data-dismiss='modal', aria-hidden='true') OK
        // /.modal-footer
      // /.modal-content
    // /.modal-dialog
  // /.modal          
block scripts
  script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.js')
  script(type='text/javascript', src=base+'/scripts/bootstrap-timepicker.min.js')
  script(type='text/javascript', src=base+'/scripts/home.js')
